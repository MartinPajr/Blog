@{
}
<div>
    <h2>Přihlášení</h2>
</div>
<form asp-antiforgery="true" method="post" asp-action="Login">
  <div class="mb-3 mt-3">
    <label for="text" class="form-label">Přezdívka:</label>
    <input type="text" class="form-control" id="email" placeholder="Přezdívka" name="username">
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Heslo:</label>
    <input type="password" class="form-control" id="pwd" placeholder="Heslo" name="password">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>