@using ListkovacDTO
@model List<ClanekDTO>
@{
   
    ViewData["Title"] = "Home Page";
}

<div class="m-4">
<div class="row row-cols-1 row-cols-md-2 g-4">

    @foreach(ClanekDTO clanek in Model) {

        <div class="col">
            <div class="card">

            <a href="../Home/Article?Id=@clanek.Id" style="text-decoration:none; color:black;">

                <img src="" class="card-img-top" alt="..." style="width: 100%; height: 337px; object-fit: cover; object-position: 100% 0;">
                <div class="card-body">
                    <h5 class="card-title">@clanek.Name</h5>
                    <p class="card-text" style="white-space: nowrap; height: 25px; overflow: hidden; text-overflow: ellipsis;">@clanek.Text</p>
                </div>
                <div class="card-footer">
                    <small class="text">@clanek.Date </small>
                </div>
            </a>
            </div>
        </div>
    }
    </div>
</div>
